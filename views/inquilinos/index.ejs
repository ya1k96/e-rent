<%- include('../partials/head'); -%>
<%- include('../partials/navbar'); -%>
    
    <div class="row-s center midd-content margin-top-6">               
        <button class="btn btn-info btn-wide" data-toggle="modal" data-target="#exampleModal">
            Nuevo Inquilino
        </button>
    </div>
    <% if (data.status) { %>
        <div class="row-s center midd-content mt-4 status">               
            <div class="alert alert-<%= data.status.class %> width-10">
                <p><%= data.status.msg %></p>
            </div>
        </div>
    <% } %>

        <div class="row-s midd-content mt-3">       
            <% if(data.inquilinos.length > 0) {%>
                <% for (var i=0; i < data.inquilinos.length; i++) {%>
                    <div class="card m-2 p-2 column margin-10">
                        <img src="../icons/neutral-user.png" alt="">
                        <p class="text-center icon-txt"><%= data.inquilinos[i].name + ' ' + data.inquilinos[i].surname %></p>
                    
                    </div>            
                <% } %>
            <% } else { %>
            <% } %>
                
        </div>
      
      <!-- Modal -->
      <div class="modal animate__animated animate__fadeIn" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content p-3">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Datos del inquilino</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <form action="">
                    <input type="text" name="name" placeholder="Nombre" class="form-control mt-2"  required/>
                    <input type="text" name="surname" placeholder="Apellido" class="form-control mt-2"  required/>
                    <input type="text" name="price" placeholder="Monto del alquiler" class="form-control mt-2"  required/>
                    <div>
                        <p class="txt-form">Porcentaje de incremento</p>
                        <div id="slider3">
                            <span class="ui-slider-value first"></span>
                            <span class="ui-slider-value last"></span>
                        </div>
    
                    </div>
                    <div>
                        <p class="txt-form m-0">Fecha de inicio</p>
                        <input class="form-control" type="date" name="begin" required>
                    </div>
                    <div>
                        <p class="txt-form m-0">Fecha de fin</p>
                        <input class="form-control" type="date" name="end" required>
                    </div>
                    <select class="form-control mt-2 select select-primary select-block mbl" name="increment_month">
                        <optgroup label="Periodo de aumento">
                            <option value="6">6 meses</option>
                            <option value="3">3 meses</option>
                        </optgroup>
                    </select>

                    <div class="pt-2">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <input type="submit" class="btn btn-outline-info" value="Guardar" id="btn-save">

                    </div>
                </form>
            </div>
          </div>
        </div>
      </div>
<%- include('../partials/footer'); -%>